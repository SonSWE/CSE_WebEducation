            </div>
            <div class="col-lg-8 col-mobile" style="margin-right:-12px ;">
                <div class="title-news_wrapper">
                    <h3 class="news-title">Tin tức khoa</h3>
                </div>
                <div class="news-list-container">
                    <div class="row">
                        @if (_LstNews != null && _LstNews.Count > 0)
                        {
                            foreach (CSE_PostsInfo item in _LstNews)
                            {
                                string title = item.Title;
                                if (item.Title.Length > 61)
                                    title = item.Title.Substring(0, 60) + "...";

                                <div class="col-lg-6">
                                    <div class="news-item-wrapper">
                                        <div class="news-item-avatar">
                                            <div class="avatar-overlay"></div>
                                            <img width="100%" src="@item.Thumbnail" alt="">
                                        </div>
                                        <div class="title-wrapper">
                                            <a>@item.Created_Date</a>
                                            <h3>
                                                <a href="#">@title</a>
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <a href="/danh-sach-bai-viet/BAOCSE" class="more-news-btn">Đọc tin tức</a>

                </div>
            </div>
        </div>
    </div>

</div>

