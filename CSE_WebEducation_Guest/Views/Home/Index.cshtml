<div class="container-xxl container">
    <div class="events-container">
        <div class="events-title title-news_wrapper">
            <h3 class="news-title">CSE sự kiện</h3>
        </div>

        <div class="events-content-wrapper">
            <div class="events-list">
                @if (_LstEvent != null && _LstEvent.Count > 0)
                {
                    foreach (CSE_PostsInfo item in _LstEvent)
                    {
                        string title = item.Title;
                        if (item.Title.Length > 61)
                            title = item.Title.Substring(0, 60) + "...";

                        <div class="">
                            <div class="event-content">
                                <div class="event-thumbnail">
                                    <img width="100%" src="@item.Thumbnail" alt="">
                                </div>
                                <div class="items-events-wrap">
                                    <div class="events-start-date">
                                        <div>
                                            <span>@item.Start_Date.ToString("dd")</span>
                                            <span>TH @item.Start_Date.ToString("MM")</span>
                                        </div>
                                    </div>
                                    <div class="events-detail">
                                        <a href="">@title</a>
                                        <div class="events-info">
                                            <span>@item.Start_Date.ToString("HH:mm") - @item.End_Date.ToString("HH:mm")</span>
                                        </div>
                                        <div class="events-info">
                                            <span>@item.Location</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <a href="/danh-sach-bai-viet/SUKIEN" class="more-news-btn">Xem tất cả sự kiện</a>
        </div>
    </div>
</div>


