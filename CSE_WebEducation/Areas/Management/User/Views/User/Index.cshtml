    function Delete(user_id) {
        try {
            nvsConfirm("Bạn có chắc chắn muốn xóa người dùng này không?", function () {
                $.ajax({
                    type: 'POST',
                    url: 'quan-tri/nhom-nguoi-dung/xoa',
                    data: {
                        user_id: user_id
                    },
                    async: true, cache: false, traditional: true,
                    beforeSend: function () {
                        SpinLoading(true);
                    },
                    success: function (data) {
                        if (preHandleDataResult(data)) {
                            if (data.success > 0) {
                                showSuccess(data.responseMessage)
                                Search('@CommonData.pageDefaut');
                            } else {
                                showError(data.responseMessage)
                            }
                        }
                    },
                    error: function (data) {
                        console.log(data);
                    },
                    complete: function () {
                        SpinLoading(false);
                    }
                });
            })
        } catch (ex) {
            console.log(ex);
        }
    }

