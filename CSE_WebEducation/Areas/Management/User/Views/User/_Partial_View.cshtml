@using ObjectInfo;

@{
    CSE_UsersInfo _User_Info = new CSE_UsersInfo();
    if (ViewBag.User_Info != null)
    {
        _User_Info = ViewBag.User_Info;
    }
}


<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="header-report">
            <h3>Chi tiết nhóm người dùng</h3>
            <button class="btn-close" onclick="ClosePopupDialog('dPopup', false);"><img src="~/bidding_lib/img/icon-close.svg" alt="img"></button>
        </div>
        <div class="body-report">
            <div class="row">

                <div class="col-lg-12">
                    <div class="flex-report">
                        <div class="title-report">Tên đăng nhập</div>
                        <div class="field-report">
                            <input class="ip-popup" type="text" id="Group_Name" name="Group_Name" disabled="disabled" value="@_User_Info.User_Name">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="flex-report">
                        <div class="title-report">Tên đầy đủ</div>
                        <div class="field-report">
                            <input class="ip-popup" type="text" id="Group_Name" name="Group_Name" disabled="disabled" value="@_User_Info.Full_Name">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="flex-report">
                        <div class="title-report">Loại nhóm</div>
                        <div class="field-report">
                            <input class="ip-popup" type="text" id="Group_Type" name="Group_Type" disabled="disabled" value="@_User_Info.User_Type_Text">
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="flex-report">
                        <div class="title-report">Trạng thái</div>
                        <div class="field-report">
                            <input class="ip-popup" type="text" id="Note" name="Note" disabled="disabled" value="@_User_Info.Status_Text">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="flex-report">
                        <div class="title-report">Email</div>
                        <div class="field-report">
                            <input class="ip-popup" type="text" id="Note" name="Note" disabled="disabled" value="@_User_Info.Email">
                        </div>
                    </div>
                </div>


                <div class="col-lg-12">
                    <div class="flex-report">
                        <div class="title-report">Số điện thoại</div>
                        <div class="field-report">
                            <input class="ip-popup" type="text" id="Note" name="Note" disabled="disabled" value="@_User_Info.Phone">
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="flex-report">
                        <div class="title-report">CCCD/CMND</div>
                        <div class="field-report">
                            <input class="ip-popup" type="text" id="Note" name="Note" disabled="disabled" value="@_User_Info.Identity_Card">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="foot-report text-right">
            <button class="btn-cancel" type="button" id="btnExit" onclick="ClosePopupDialog('dPopup', false);"><img src="~/bidding_lib/img/icon-cancel.svg" alt="img">Thoát</button>
        </div>
    </div>
</div>